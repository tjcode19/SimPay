<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#f86900</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#268f47
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#268f47</item>
    </style>

    <!-- Base application theme. -->
    <style name="BottomNav" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MySpinnerLook" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">22sp</item>
    </style>

</resources>
